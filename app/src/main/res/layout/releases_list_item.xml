<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/release_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/mediumPadding"
    android:layout_marginRight="@dimen/mediumPadding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/release_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/smallPadding"
        android:layout_weight="1"
        android:scaleType="fitStart"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/release_title"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:scrollHorizontally="true"
        android:textColor="@color/primaryDarkText"
        style="@style/normalTextStyle" />

    <TextView
        android:id="@+id/release_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textColor="@color/secondaryDarkText"
        android:textSize="@dimen/smallTextSize" />

</LinearLayout>