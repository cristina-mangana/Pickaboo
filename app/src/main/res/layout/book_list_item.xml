<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="@dimen/listImageDimen"
        android:layout_height="@dimen/listImageDimen"
        android:paddingLeft="@dimen/mediumPadding"
        android:paddingRight="@dimen/mediumPadding"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/mediumPadding"
        android:paddingEnd="@dimen/mediumPadding"
        android:paddingRight="@dimen/mediumPadding"
        android:paddingTop="@dimen/mediumPadding">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:scrollHorizontally="true"
            android:textColor="@color/primaryDarkText"
            style="@style/normalTextStyle" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:textColor="@color/secondaryDarkText"
            style="@style/normalTextStyle" />
    </LinearLayout>

</LinearLayout>